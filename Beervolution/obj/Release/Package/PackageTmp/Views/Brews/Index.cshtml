@model IEnumerable<Beervolution.Models.Beer>

<style>
    .icon-size {
        height: 15%;
        width: 15%;
    }

    .padding-top {
        padding-top: 20px;
    }
</style>

<div class="row padding-top">
    <div class="col-sm-6">
        <h2>Brews</h2>
        @Html.ActionLink("Create New Brew", "Create", null, new { @class = "btn btn-default" })
    </div>
    <div class="col-sm-6 text-right">
        <img src="~/Images/barrel-icon.png" title="Brew" class="icon-size" />
    </div>
</div>
<br />

<table class="table">

    @foreach (var beer in Model)
    {
        <tr>
            @String.Format("{0} ({1}%)", beer.Name, beer.TargetPercentage)
        </tr>

        if (beer.Brews != null)
        {
            foreach (var brew in beer.Brews)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => brew.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => brew.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => brew.BottleDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = brew.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = brew.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = brew.ID })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                No brews available
            </tr>
        }
    }

</table>
